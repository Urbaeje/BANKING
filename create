    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        String accountId = jTextField1.getText();
        String accountName = jTextField2.getText();
        String balanceStr = jTextField3.getText();

        if (accountId.isEmpty() || accountName.isEmpty() || balanceStr.isEmpty()) {
            JOptionPane.showMessageDialog(this, "Please fill in all fields.");
            return;
        }

        try {
            double balance = Double.parseDouble(balanceStr);

            // Create the Account object
            Account newAccount = new Account(accountName, accountId, balance);

            // Add the account to the BankData
            BankData.addAccount(newAccount);

            JOptionPane.showMessageDialog(this, "Account created successfully!");

            // Clear fields after successful account creation
            jTextField1.setText("");
            jTextField2.setText("");
            jTextField3.setText("");

            // Close the create JFrame
            this.dispose();

        } catch (NumberFormatException e) {
            JOptionPane.showMessageDialog(this, "Invalid balance format. Please enter a number.");
        }
    }                                        


    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        String accountId = jTextField1.getText();

        if (accountId.isEmpty()) {
            JOptionPane.showMessageDialog(this, "Please enter Account ID.");
            return;
        }

        Account account = BankData.getAccount(accountId); // Get account from BankData

        if (account != null) {
            jTextField3.setText(account.name);
            jTextField4.setText(account.id);
            jTextField5.setText(String.valueOf(account.balance));
        } else {
            JOptionPane.showMessageDialog(this, "Account not found.");
            jTextField3.setText("");
            jTextField4.setText("");
            jTextField5.setText("");
        }
    }                                        


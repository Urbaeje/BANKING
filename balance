    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        String accountId = jTextField1.getText();

        if (accountId.isEmpty()) {
            JOptionPane.showMessageDialog(this, "Please enter Account ID.");
            return;
        }

        Account account = BankData.getAccount(accountId); // Get account from BankData

        if (account != null) {
            jTextField2.setText(String.valueOf(account.balance)); // Display balance
        } else {
            JOptionPane.showMessageDialog(this, "Account not found.");
            jTextField2.setText("");
        }
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        this.dispose();
    }                                        

